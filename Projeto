int Relatorio(){
  
  char ano[4];
  char texto[2], c;
  printf("Digite o ano que deseja consultar: ");
  scanf("%s", ano);

  FILE*arquivo;
  arquivo= fopen(ano, "r");
  while((c = fgetc(arquivo)) != EOF){
    printf("%c", c);
    if(c == !EOF){
      return 0;
    }

  }
  
  fclose(arquivo);
  return 0;
}

